<section class="vh-100" style="background-color: #eee;">
	<div class="container h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-lg-12 col-xl-11">
				<div class="card text-black" style="border-radius: 25px;">
					<div class="card-body p-md-5">
						<div class="row justify-content-center">
							<div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

								<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign in</p>

								<form class="mx-1 mx-md-4" method="POST" action="">

									<div class="d-flex flex-row align-items-center mb-4">
										<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
										<div class="form-outline flex-fill mb-0">
											<input name="email" type="email" id="email" class="form-control" required />
											<label class="form-label" for="email">Your Email</label>
										</div>
									</div>

									<div class="d-flex flex-row align-items-center mb-4">
										<i class="fas fa-lock fa-lg me-3 fa-fw"></i>
										<div class="form-outline flex-fill mb-0">
											<input name="password" type="password" id="password" class="form-control" required />
											<label class="form-label" for="password">Password</label>
										</div>
									</div>

									<div class="d-flex justify-content-center align-items-center mx-4 mb-3 mb-lg-4">
										<button type="submit" id="btn-confirm-login" class="btn btn-primary btn-lg">Login</button>
										<span class="mx-2">or</span>
										<a href="/auth/register" class="">Register now</a>
									</div>

								</form>

							</div>
							<div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

								<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" class="img-fluid" alt="Sample image">

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<script>
	var input_email = document.getElementById('email')
	var input_password = document.getElementById('password')
	var form = document.querySelector('form');

	form.onsubmit = e => {
		e.preventDefault();

		var user = {
			email: input_email.value,
			password: input_password.value
		}

		fetch('', {
				method: 'POST',
				headers: {
					'Content-Type': 'application/json'
				},
				body: JSON.stringify(user)
			})
			.then(res => res.json())
			.then(res => {
				console.log(res);
				if (!res.ok) {
					Swal.fire({
						title: "Wrong!",
						text: res.msg,
						icon: "error"
					});
				} else {
					Swal.fire({
						title: "Success!",
						text: "Login successfully!",
						icon: "success"
					});

					setTimeout(() => {

						window.location.replace('/')
					}, 1000)
				}

			}).catch(err => {
				Swal.fire({
					title: "Wrong!",
					text: "Lối không xác định",
					icon: "error"
				});
			})

	}
</script>